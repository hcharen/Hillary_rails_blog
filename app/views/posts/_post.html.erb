<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="user-name">
        <%= link_to post.user.user_name, profile_path(post.user.user_name) %>
        </div>
        <br>
        <div class="post-title">
          <%= post.title %>
        </div>
          <div class="post-image">
          <%= link_to image_tag(post.avatar.url(:medium)), post_path(post) %>
        </div>
    <div class="post-body">
      <div class="post-text">
        <%= post.text %>
      </div>
      <% if post.comments %>
        <% post.comments.each do |comment| %>
          <br>
          <div class="comment">
            <div class="user_name">
              <%= comment.user.user_name %>
            </div>
            <div class="comment-content">
              <%= comment.body %>
            </div>
            <% if comment.user == current_user %>
              <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } do %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <br>


      <div class="comment-form col-sm-11">
        <%= form_for [post, post.comments.new] do |f| %>
          <%= f.text_field :body, placeholder: 'Add a comment...' %>
        <% end %>
      </div>
      <br>

  </div>
</div>
